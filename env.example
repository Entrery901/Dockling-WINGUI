# ==================== ПАРАМЕТРЫ OCR (Распознавание текста) ====================
# Включить OCR для сканированных документов (true/false)
ENABLE_OCR=true

# OCR движок: 'easyocr' или 'tesseract'
# easyocr - не требует установки, но медленнее и требует больше памяти
# tesseract - быстрее, но требует установки Tesseract-OCR в системе
#   Windows: https://github.com/UB-Mannheim/tesseract/wiki
#   Linux: sudo apt install tesseract-ocr tesseract-ocr-rus
#   macOS: brew install tesseract
OCR_ENGINE=easyocr

# Языки для OCR (через запятую, без пробелов)
# Для Tesseract: rus,eng (русский и английский)
# Для EasyOCR: ru,en
# Важно: для Tesseract нужно установить языковые пакеты
OCR_LANGUAGES=rus,eng

# ==================== ПАРАМЕТРЫ ТАБЛИЦ ====================
# Включить распознавание структуры таблиц (true/false)
ENABLE_TABLE_STRUCTURE=true

# Режим обработки таблиц: 'fast' (быстрый) или 'accurate' (точный)
TABLE_STRUCTURE_MODE=accurate

# ==================== ПАРАМЕТРЫ ИЗОБРАЖЕНИЙ ====================
# Генерировать изображения из документа (true/false)
GENERATE_PICTURE_IMAGES=true

# Масштаб изображений (1.0 = оригинал, 2.0 = удвоенный размер)
IMAGES_SCALE=2.0

# Включить описание изображений с помощью VLM модели (true/false)
# Требует настройки OpenAI API или другого VLM сервиса
ENABLE_PICTURE_DESCRIPTION=false

# Промпт для описания изображений (на русском или английском)
PICTURE_DESCRIPTION_PROMPT=Опишите это изображение в трех-пяти предложениях. Будьте точны и кратки.

# ==================== OPENAI API НАСТРОЙКИ ====================
# Использовать OpenAI API для расширенных функций (true/false)
# Необходимо для описания изображений и использования VLM моделей
USE_OPENAI_API=false

# API ключ OpenAI или совместимого сервиса
# Получить ключ: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Base URL для OpenAI API (для проксирования)
# Примеры:
#   OpenAI: https://api.openai.com/v1
#   Локальный VLLM: http://localhost:8000/v1
#   Ollama: http://localhost:11434/v1
#   Другой proxy: https://your-proxy.example.com/v1
OPENAI_BASE_URL=https://api.openai.com/v1

# Имя модели для использования
# Примеры: gpt-4-vision-preview, gpt-4o, gpt-4o-mini
OPENAI_MODEL_NAME=gpt-4-vision-preview

# Таймаут для запросов к API (в секундах)
OPENAI_TIMEOUT=90

# Максимальное количество токенов для генерации
OPENAI_MAX_TOKENS=200

# Temperature для генерации (0.0 = детерминированный, 1.0 = креативный)
OPENAI_TEMPERATURE=0.0

# Seed для воспроизводимости результатов
OPENAI_SEED=42

# Включить подключение к удаленным сервисам (требуется для OpenAI API)
# ВАЖНО: Установите true, если используете OpenAI API
ENABLE_REMOTE_SERVICES=false

# ==================== ПАРАМЕТРЫ КОНВЕРТАЦИИ ====================
# Максимальное количество страниц для обработки (0 = без ограничений)
MAX_NUM_PAGES=0

# Максимальный размер файла в байтах (52428800 = 50MB, 0 = без ограничений)
MAX_FILE_SIZE=52428800

# Продолжить обработку при ошибках (true/false)
# true = продолжить обработку остальных файлов при ошибке
# false = остановить при первой ошибке
CONTINUE_ON_ERROR=true

# ==================== ПУТИ К ПАПКАМ ====================
# Папка с входными документами для конвертации
INPUT_DIR=input

# Папка для сохранения результатов конвертации
OUTPUT_DIR=output

